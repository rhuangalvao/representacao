<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>ArtLustres</title>
</head>
<body>
<div class="container">
<h2><a class="mt-1" href="/">Início</a></h2>

<h2>ArtLustres</h2>
  <a class="btn btn-primary mb-1" href="/artlustres/create" role="button">Adicionar produto</a>

  <section class="data">
    <div class="table-responsive">
      <table class="datatable table table-bordered table-striped table-hover" data-table-source="" data-table-filter-target>
        <thead>
          <tr>
            <th scope="col">Código</th>
            <th scope="col">Nome</th>
            <th scope="col">Estoque</th>
            <th scope="col">Valor</th>
            <th scope="col">Ações</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(details) { %>
              <tr>
                  <td><%= details.codigo %></td>
                  <td><%= details.nome %></td>
                  <td><%= details.estoque %></td>
                  <td><%= details.valor %></td>
                  <td><a href="/artlustres/edit/<%= details._id %>">Editar</a> - <a href="/artlustres/delete/<%= details._id %>">Deletar</a></td>
              </tr>
              <% }) %>
        </tbody>
      </table>
    </div>
  </section>
<a class="btn btn-secondary mt-1" href="/">Voltar</a>
</div>
</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

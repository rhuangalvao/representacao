<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Representações</title>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="card-body  w-50 p-3 mx-auto" style="background-color: #eee;">
        <h2>Visita</h2>
        <div class="card">
          <div class="card-body">
            <form action="/cidade/salvarvisita" method="POST">
              <div class="column-3 column label">
                <label>Cidade</label>
              </div>
              <div class="column-9 column input">
                <select class="form-control" name="cidadeVisitada">
                  <% cidade.forEach(function(details) { %>
                  <option name="cidadeVisitada" value="<%= details.nome %>"><%= details.nome %></option>
                  <% }) %>
                </select>
              </div>
              <div class="column-3 column label">
                <label>Data</label>
              </div>
              <div class="column-9 column input">
                <input id="datePicker" class="datePicker form-control" type="date" name="data"/>
              </div>
              <br>
              <button class="btn btn-primary float-right mt-1" type="submit">Salvar</button>
              <a class="btn btn-secondary mt-1" href="/">Voltar</a>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<script>
$(document).ready( function() {
    var now = new Date();
    var month = (now.getMonth() + 1);
    var day = now.getDate();
    if (month < 10)
        month = "0" + month;
    if (day < 10)
        day = "0" + day;
    var today = now.getFullYear() + '-' + month + '-' + day;
    $('#datePicker').val(today);
});

(function($){

  var select2Init = function(){
    $('select').select2({
      width: 'resolve',
    });
  };

	$(document).ready(function(){
    select2Init();
	});

})(jQuery);
</script>
